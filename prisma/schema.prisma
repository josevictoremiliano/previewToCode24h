// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de usuário
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relacionamentos
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  notifications Notification[]
  apiKeys       ApiKey[]

  @@map("users")
}

// Modelo para NextAuth.js
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Modelo de projeto/site
model Project {
  id        String        @id @default(cuid())
  userId    String        @map("user_id")
  status    ProjectStatus @default(PENDING)
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  // Informações básicas
  siteName String  @map("site_name")
  slogan   String?
  siteType String  @map("site_type")
  niche    String?

  // Identidade visual
  logoUrl        String? @map("logo_url")
  primaryColor   String? @map("primary_color")
  secondaryColor String? @map("secondary_color")
  style          String?
  referenceUrls  Json?   @map("reference_urls")

  // Conteúdo
  description    String?
  targetAudience String? @map("target_audience")
  products       Json?
  cta            String?
  sections       Json?

  // Informações de contato
  contactEmail   String? @map("contact_email")
  contactPhone   String? @map("contact_phone")
  contactAddress String? @map("contact_address")
  socialMedia    Json?   @map("social_media")

  // Recursos adicionais
  images      Json?
  customTexts String? @map("custom_texts")
  features    Json?

  // URLs do site gerado
  previewUrl String? @map("preview_url")
  finalUrl   String? @map("final_url")

  // Relacionamentos
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@map("projects")
}

enum ProjectStatus {
  PENDING     // Em análise
  PREVIEW     // Preview pronto
  APPROVED    // Aprovado pelo cliente
  COMPLETED   // Finalizado
  PUBLISHED   // Publicado
  REVISION    // Precisa de revisão
}

// Modelo de notificações
model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  projectId String?  @map("project_id")
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  // Relacionamentos
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Modelo de API Keys
model ApiKey {
  id          String    @id @default(cuid())
  name        String    // Nome/descrição da API key
  key         String    @unique // A chave em si (hash)
  keyPreview  String    @map("key_preview") // Primeiros/últimos caracteres para exibição
  userId      String    @map("user_id")
  active      Boolean   @default(true)
  lastUsedAt  DateTime? @map("last_used_at")
  expiresAt   DateTime? @map("expires_at")
  permissions Json?     // Permissões específicas da API key
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relacionamentos
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}
