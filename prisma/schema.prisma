// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de usuário
enum UserRole {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  projects         Project[]
  notifications    Notification[]
  apiKeys          ApiKey[]
  chatMessages     ChatMessage[]
  adminAssignments Project[] @relation("AdminAssignments")
  aiConfigs        AiConfig[]
  promptTemplates  PromptTemplate[]
  aiUsageLogs      AiUsageLog[]

  @@map("users")
}

// Modelo para NextAuth.js
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Modelo de projeto/site
model Project {
  id          String        @id @default(cuid())
  name        String
  data        Json
  status      ProjectStatus @default(PENDING)
  previewUrl  String?
  publishUrl  String?
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedAdminId String?
  assignedAdmin   User?     @relation("AdminAssignments", fields: [assignedAdminId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  cancelledAt DateTime?
  cancelReason String?

  notifications Notification[]
  chatMessages  ChatMessage[]
  aiUsageLogs   AiUsageLog[]

  @@map("projects")
}

enum ProjectStatus {
  PENDING
  PREVIEW
  APPROVED
  REVISION
  COMPLETED
  PUBLISHED
  CANCELLED
}

// Modelo de notificações
model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  projectId String?  @map("project_id")
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  // Relacionamentos
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Modelo de API Keys
model ApiKey {
  id          String   @id @default(cuid())
  name        String
  keyHash     String   @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  permissions String[] @default(["read", "write"])
  isActive    Boolean  @default(true)
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("api_keys")
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  isFromAdmin Boolean @default(false)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  readAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chat_messages")
}

// Modelo para configurações de IA
model AiConfig {
  id            String   @id @default(cuid())
  provider      String   // "groq", "openai", "anthropic", etc.
  apiKey        String   // Chave API criptografada
  model         String   // Nome do modelo (ex: "llama3-70b", "gpt-4", etc.)
  isActive      Boolean  @default(true)
  maxTokens     Int      @default(4000)
  temperature   Float    @default(0.7)
  description   String?  // Descrição opcional
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdById   String
  createdBy     User     @relation(fields: [createdById], references: [id])
  usageLogs     AiUsageLog[]

  @@map("ai_configs")
}

// Modelo para templates de prompts
model PromptTemplate {
  id          String   @id @default(cuid())
  name        String   // Nome do template (ex: "Criação de copy", "Criação de HTML")
  key         String   @unique // Chave única (ex: "copy_creation", "html_creation")
  prompt      String   @db.Text // Template do prompt com variáveis
  description String?  // Descrição do que faz
  category    String   @default("general") // Categoria (copy, html, seo, etc.)
  isActive    Boolean  @default(true)
  variables   Json     // Array de variáveis esperadas
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  usageLogs   AiUsageLog[]

  @@map("prompt_templates")
}

// Modelo para histórico de uso de IA
model AiUsageLog {
  id            String   @id @default(cuid())
  configId      String
  config        AiConfig @relation(fields: [configId], references: [id])
  promptId      String?
  prompt        PromptTemplate? @relation(fields: [promptId], references: [id])
  projectId     String?
  project       Project? @relation(fields: [projectId], references: [id])
  inputTokens   Int?
  outputTokens  Int?
  totalTokens   Int?
  cost          Float?   // Custo estimado
  responseTime  Int?     // Tempo de resposta em ms
  success       Boolean  @default(true)
  errorMessage  String?
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  @@map("ai_usage_logs")
}
